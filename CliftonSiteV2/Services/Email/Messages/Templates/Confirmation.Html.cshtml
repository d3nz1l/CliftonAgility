@using RazorLight
@using CliftonSiteV2.Services.Email
@inherits TemplatePage<EmailModel>

@{
    this.Layout = "Services.Email.Messages.Templates._Layout.cshtml";
    this.ViewBag.Title = "Thank you for your message";
}

<table border="0" cellpadding="0" cellspacing="0" width="100%">

    <tr>
        <td align="center" style="padding: 0 0 8px 0; color: #1565c0; font-family: 'Roboto', Helvetica, Arial, sans-serif; font-size: 28px; font-weight: 400; line-height: 32px;">
            Thank you for contacting Clifton Agility Club
        </td>
    </tr>
    <tr>
        <td align="center" style="padding: 0 0 16px 0; color: #424242; font-family: 'Roboto', Helvetica, Arial, sans-serif; font-size: 16px; font-weight: normal; line-height: 28px;">
            This is an automated message to confirm your message has been received by the club. A copy of the information you provided is shown
            below. If anything looks wrong, please let us know.
        </td>
    </tr>
    <tr>
        <td>
            @{ await IncludeAsync($"Services.Email.Messages.Templates.Partials._{Model.GetType().Name}Details.Html.cshtml", Model); }
        </td>
    </tr>
</table>
