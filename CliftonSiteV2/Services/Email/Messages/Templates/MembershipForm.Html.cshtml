@using RazorLight
@using CliftonSiteV2.Models
@inherits TemplatePage<MembershipForm>

@{
    this.Layout = "Services.Email.Messages.Templates._Layout.cshtml";
    this.ViewBag.Title = "Membership Form";
}

<table border="0" cellpadding="0" cellspacing="0" width="100%">

    <tr>
        <td align="center" style="padding: 0 0 8px 0; color: #1565c0; font-family: 'Roboto', Helvetica, Arial, sans-serif; font-size: 28px; font-weight: 400; line-height: 32px;">
            Membership Form from the website
        </td>
    </tr>
    <tr>
        <td align="center" style="padding: 0 0 16px 0; color: #424242; font-family: 'Roboto', Helvetica, Arial, sans-serif; font-size: 16px; font-weight: normal; line-height: 28px;">
            We have received the following membership form.
        </td>
    </tr>
    <tr>
        <td>
            <table>
                <tr style="padding-bottom: 5px;">
                    <td align="right">Name:</td>
                    <td align="left" style="padding-left: 30px;">@Model.Name</td>
                </tr>
                <tr>
                    <td align="right">Email Address:</td>
                    <td align="left" style="padding-left: 30px;">@Model.EmailAddress</td>
                </tr>
                <tr>
                    <td align="right">Phone Number:</td>
                    <td align="left" style="padding-left: 30px;">@Model.PhoneNumber</td>
                </tr>
                <tr>
                    <td align="right">Your Dogs Name:</td>
                    <td align="left" style="padding-left: 30px;">@Model.DogName</td>
                </tr>
                <tr>
                    <td align="right">Your Dogs Breed:</td>
                    <td align="left" style="padding-left: 30px;">@Model.Breed</td>
                </tr>
                <tr>
                    <td align="right">Your Dogs DOB:</td>
                    <td align="left" style="padding-left: 30px;">@Model.DogDateOfBirth.ToString("d MMMM yyyy")</td>
                </tr>
                <tr>
                    <td align="right">Message:</td>
                    <td align="left" style="padding-left: 30px;">@Model.Message</td>
                </tr>
            </table>
        </td>
    </tr>
</table>
