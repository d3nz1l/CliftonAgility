@using RazorLight
@using System.Text.RegularExpressions
@using CliftonSiteV2.Models
@inherits TemplatePage<MembershipForm>

<table>
    <tr style="padding-bottom: 5px;">
        <td align="right">Name:</td>
        <td align="left" style="padding-left: 30px;">@Model.Name</td>
    </tr>
    <tr>
        <td align="right">Email Address:</td>
        <td align="left" style="padding-left: 30px;">@Model.EmailAddress</td>
    </tr>
    <tr>
        <td align="right">Phone Number:</td>
        <td align="left" style="padding-left: 30px;">@Model.PhoneNumber</td>
    </tr>
    <tr>
        <td align="right">Dogs Name:</td>
        <td align="left" style="padding-left: 30px;">@Model.DogName</td>
    </tr>
    <tr>
        <td align="right">Dogs Breed:</td>
        <td align="left" style="padding-left: 30px;">@Model.Breed</td>
    </tr>
    <tr>
        <td align="right">Dogs DOB:</td>
        <td align="left" style="padding-left: 30px;">@Model.DogDateOfBirth.ToLongDateString()</td>
    </tr>
    <tr>
        <td align="right">Message:</td>
        <td align="left" style="padding-left: 30px;">@Model.Message</td>
    </tr>

</table>